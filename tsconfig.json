{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "scripts/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
