{
    "type": "module",
    "prettier": {
        "trailingComma": "es5"
    },
    "scripts": {
        "compile": "npm run generate-types && tsc",
        "start": "npm run compile && node ./dist/index.js",
        "generate-schema": "npx ts-node --esm ./scripts/json2graphql.ts",
        "generate-schemas": "npx ts-node --esm ./scripts/generate-schemas.ts",
        "generate-data": "npx ts-node --esm ./scripts/generate-data.ts",
        "generate-types": "graphql-codegen --config codegen.ts"
    },
    "dependencies": {
        "@apollo/server": "^4.10.0",
        "@graphql-tools/load-files": "^7.0.0",
        "app-root-dir": "^1.0.2",
        "graphql": "^16.8.1",
        "minimist": "^1.2.8"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "5.0.2",
        "@graphql-codegen/typescript": "4.0.6",
        "@graphql-codegen/typescript-resolvers": "4.0.6",
        "@types/app-root-dir": "^0.1.4",
        "@types/minimist": "^1.2.5",
        "@types/node": "^20.11.19",
        "prettier": "^3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
